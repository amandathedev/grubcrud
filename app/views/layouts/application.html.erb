<!DOCTYPE html>
<html>
  <head>
    <title>Auth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
​
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Kreon:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Concert+One&display=swap" rel="stylesheet">
  </head>
​
  <body>

    <nav id="navbar" class="navbar navbar-expand-lg sticky-top navbar-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% if logged_in? %>
            <%= link_to "Home", root_path, class: "red-hover nav-item nav-link active"%>
            <%= link_to "My Cart", cart_path, class: "red-hover nav-item nav-link"%>
            <%= link_to "My Account", user_path(session[:user_id]), class: "red-hover nav-item nav-link"%>
            <%= link_to "Logout", logout_path, method: :delete, class: "red-hover nav-item nav-link" %>
          <% else %>
            <%= link_to "Home", root_path, class: "red-hover nav-item nav-link active"%>
            <%= link_to "Log In", login_path, class: "red-hover nav-item nav-link" %><br>
            <%= link_to 'Sign Up', new_user_path, class: "red-hover nav-item nav-link" %><br>
          <% end %>
        </div>
      </div>
    </nav>


      <!-- Jumbotron -->
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 id="grubcrud" class="display-4">GrubCRUD</h1>
        <p id="slogan" class="lead">Put our food in your face</p>
      </div>
    </div>

    <%= yield %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
      <script>
        $(document).ready(function(){       
          var scroll_pos = 0;
          $(document).scroll(function() { 
          let nav = $('#navbar');
          let wait = $('#navbar').height();
          nav.toggleClass("scrolled", $(this).scrollTop() > wait);
          });
        });  
      </script>
  
  </body>
</html>