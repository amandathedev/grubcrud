<h1> Welcome to <%=@restaurant.name%></h1>
<br>

<% @items.each do |item| %>
  <p><%= item.name %> | <%= number_to_currency item.price %>
  <%= form_for @order_item do |f| %>
    <%= f.hidden_field :item_id, value: item.id %>
    <%= f.number_field :quantity %>
    <%= f.submit "Add to cart" %>
  <% end %></p>
<% end %>
