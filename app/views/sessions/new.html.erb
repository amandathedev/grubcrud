<h1 class="login-form">Login</h1>
<% if session[:lockout] %>
  <p><strong><%= session[:lockout] %></strong></p>
<% end %>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>
<div class="login-form">
  <%= form_tag '/login' do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %><br>
    <%= label_tag :password %>
    <%= password_field_tag :password %><br>
    <%= submit_tag "Login" %>
  <% end %>
</div>
